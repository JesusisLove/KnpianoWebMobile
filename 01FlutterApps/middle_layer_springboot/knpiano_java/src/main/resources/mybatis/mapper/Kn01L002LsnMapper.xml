<?xml version="1.0" encoding="UTF-8" ?>
<!--
关于Mybatis的SQL文件映射该怎么写，我们要参照Mybatis的官方文档，官方文档都托管到了GitHub下
我们就从GitHub网站去搜索MyBatis的相关资料
配置的参照例子
https://mybatis.org/mybatis-3/getting-started.html

-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liu.springboot04web.mapper.Kn01L002LsnMapper">
    <select id= "getInfoList" resultType="com.liu.springboot04web.bean.Kn01L002LsnBean">
        select * from v_info_lesson
    </select>

    <select id= "getInfoById" resultType="com.liu.springboot04web.bean.Kn01L002LsnBean">
        select * from v_info_lesson
        where lesson_id = #{lessonId}
    </select>

    <select id="searchLessons" resultType="com.liu.springboot04web.bean.Kn01L002LsnBean">
        SELECT
            *
        FROM
            v_info_lesson
        <where>
            <foreach item="value" index="key" collection="params">
                <if test="value != null and value != ''">
                    <!-- 假设key是数据库列名，需要确保key与数据库列名匹配 -->
                    AND ${key} like CONCAT('%', #{value}, '%')
                </if>
            </foreach>
        </where> 
    </select> 

    <select id="getLatestSubjectList" resultType="com.liu.springboot04web.bean.Kn01L002LsnBean">
        SELECT * FROM v_letest_subject_info_from_student_document order by stu_name
    </select>

    <update id="updateInfo">
        update t_info_lesson set
            lesson_id = #{lessonId},
            subject_id = #{subjectId},
            stu_id = #{stuId},
            class_duration = #{classDuration},
            lesson_type = #{lessonType},
            schedual_date = #{schedualDate},
            scanQR_date = #{scanQRDate},
            lsn_adjusted_date = #{lsnAdjustedDate},
            extra_to_dur_date = #{extraToDurDate},
            del_flg = #{delFlg}
        where lesson_id = #{lessonId}
    </update>

    <insert id="insertInfo" keyColumn="">
        insert into t_info_lesson (
            lesson_id,
            subject_id,
            stu_id,
            class_duration,
            lesson_type,
            schedual_date,
            scanQR_date,
            lsn_adjusted_date,
            extra_to_dur_date
            )
            values (
            #{lessonId},
            #{subjectId},
            #{stuId},
            #{classDuration},
            #{lessonType},
            #{schedualDate},
            #{scanQRDate},
            #{lsnAdjustedDate},
            #{extraToDurDate}
            )
    </insert>

    <delete id="deleteInfo" parameterType="String">
        delete from t_info_lesson
        where lesson_id = #{lessonId}
    </delete>

    <select id="getNextSequence" parameterType="map" statementType="CALLABLE">
        {
            #{parm_out,mode=OUT,jdbcType=INTEGER} = call nextval(#{parm_in,mode=IN})
        }
    </select>
</mapper>